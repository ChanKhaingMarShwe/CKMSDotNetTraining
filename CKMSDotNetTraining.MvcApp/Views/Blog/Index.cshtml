
@model List<TblBlog>
@{
    bool showMessage = TempData["isSuccess"] != null;
    bool isSuccess = false;
    String message = "";
    if(showMessage)
    {
        // Retrieve the values from TempData
        isSuccess = Convert.ToBoolean(TempData["isSuccess"]);
        message = Convert.ToString(TempData["Message"]);
    }
    
}


@if (showMessage)
{
    if (isSuccess)
    {
        <div class="alert alert-success mb-3" role="alert">
            @message
        </div>
    }
    else
    {
        <div class="alert alert-danger mb-3" role="alert">
            @message
        </div>
    }
}




<a href="/Blog/Create" class="btn btn-outline-primary">Create Blog</a>

    <table>
        <thead>
            <tr>
                
                <th>No .</th>
                <th>Title</th>
                <th>Content</th>
                <th>Author</th>
                <th>Action</th>
                
        </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                var blog = Model[i];
                <tr>
                    <td>@(i + 1)</td>
                <td>@blog.BlogTitle</td>
                <td>@blog.BlogContent</td>
                <td>@blog.BlogAuthor</td>

                    <td>
                        <a href="/Blog/Edit/@(blog.BlogId)" class="btn btn-warning">Edit</a>
                        <a href="/Blog/Delete/@(blog.BlogId)" class="btn btn-danger">Delete</a>
                        
                        </td>
                </tr>
        }
)
           
    </table>